{
  "compilerOptions": {
    "outDir": "./public/",
    "baseUrl": "./",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2017"],
    "paths": {
      "@pages/*": ["./src/pages/*"],
      "@images/*": ["./src/images/*"],
      "@components/*": ["./src/components/*"],
      "@defines/*": ["./src/defines/*"]
    }
  },
  "include": ["./**/*"]
}
